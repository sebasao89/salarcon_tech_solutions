---
export interface Props {
  label?: string;
}
const { label = "Volver al inicio" } = Astro.props as Props;
---

<a
  href="#hero"
  aria-label={label}
  data-back-to-top
  class="absolute bottom-6 right-6 z-20 inline-flex items-center justify-center w-12 h-12 rounded-full geist-mono group border-2 border-blue-500 text-blue-500 transition-all duration-300 hover:bg-blue-500 hover:text-dark-500 hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 animate-in anim-up delay-375"
>
  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l7-7 7 7M12 6v12" />
  </svg>
</a>

<script>
  const btn = document.querySelector('[data-back-to-top]');
  if (btn) {
    btn.addEventListener('click', (e) => {
      const hero = document.getElementById('hero');
      if (hero) {
        e.preventDefault();
        hero.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  }
</script>