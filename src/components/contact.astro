---
// Componente Contact con formulario y información de contacto
export interface Props {
  title?: string;
  subtitle?: string;
  phone?: string;
  email?: string;
  address?: string;
  whatsapp?: string;
  socialLinks?: {
    facebook?: string;
    instagram?: string;
    linkedin?: string;
    twitter?: string;
  };
}

const {
  title = "Contáctanos",
  subtitle = "¿Tienes un proyecto en mente? Hablemos y hagámoslo realidad juntos.",
  phone = "+57 3117827572",
  email = "info@salarcontech.com",
  address = "Chinchiná - Caldas",
  whatsapp = "+573117827572",
  socialLinks = {
    facebook: "https://facebook.com/salarcontech",
    instagram: "https://instagram.com/salarcontech",
    linkedin: "https://linkedin.com/company/salarcontech",
    twitter: "https://twitter.com/salarcontech"
  }
} = Astro.props;
---

<section id="contact" class="relative py-20 lg:py-32 bg-dark-500 overflow-hidden">
  <!-- Fondo con efectos -->
  <div class="absolute inset-0 z-0">
    <!-- Gradiente sutil -->
    <div class="absolute inset-0 bg-gradient-to-br from-dark-500 via-salmon-500/5 to-dark-500"></div>
    <!-- Patrón de puntos -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header de la sección -->
    <div class="mb-16 lg:mb-20 text-center">
      <!-- Elemento decorativo superior -->
      <div class="flex items-center justify-center gap-4 mb-6">
        <div class="w-12 h-px bg-gradient-to-r from-salmon-500 to-blue-500"></div>
        <span class="geist-mono text-xs text-salmon-500 tracking-[0.2em] uppercase font-medium">
          Ponte en Contacto
        </span>
        <div class="w-12 h-px bg-gradient-to-r from-blue-500 to-salmon-500"></div>
      </div>

      <!-- Título principal -->
      <div class="relative max-w-3xl mx-auto">
        <!-- Fondo con gradiente sutil -->
        <div class="absolute -inset-4 bg-gradient-to-r from-green-500/10 via-salmon-500/5 to-blue-500/10 rounded-2xl blur-xl opacity-60"></div>
        
        <h2 class="relative work-sans text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-bold leading-tight mb-6">
          <span class="bg-gradient-to-r from-white-500 via-white-500 to-white-500/90 bg-clip-text text-transparent">
            {title}
          </span>
        </h2>

        <!-- Subtítulo -->
        <p class="geist-mono text-lg lg:text-xl text-white-500/80 leading-relaxed max-w-2xl mx-auto">
          {subtitle}
        </p>
      </div>
    </div>

    <!-- Contenido principal -->
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Formulario de contacto -->
      <div class="order-2 lg:order-1">
        <div class="relative p-8 lg:p-10 bg-gradient-to-br from-white-500/5 to-transparent border border-white-500/10 rounded-2xl backdrop-blur-sm">
          <!-- Título del formulario -->
          <div class="mb-8">
            <h3 class="work-sans text-2xl lg:text-3xl font-bold text-white-500 mb-3">
              Envíanos un mensaje
            </h3>
            <p class="geist-mono text-sm text-white-500/70">
              Completa el formulario y te responderemos en menos de 24 horas.
            </p>
          </div>

          <!-- Formulario -->
          <form class="space-y-6">
            <!-- Nombre y Email en grid -->
            <div class="grid sm:grid-cols-2 gap-6">
              <div class="group">
                <label class="geist-mono block text-sm text-white-500/80 mb-2 transition-colors group-focus-within:text-salmon-500">
                  Nombre completo
                </label>
                <input 
                  type="text" 
                  required
                  class="w-full px-4 py-3 bg-white-500/5 border border-white-500/20 rounded-lg text-white-500 placeholder-white-500/50 focus:border-salmon-500/50 focus:bg-white-500/10 focus:outline-none transition-all duration-300"
                  placeholder="Tu nombre completo"
                >
              </div>
              <div class="group">
                <label class="geist-mono block text-sm text-white-500/80 mb-2 transition-colors group-focus-within:text-salmon-500">
                  Email
                </label>
                <input 
                  type="email" 
                  required
                  class="w-full px-4 py-3 bg-white-500/5 border border-white-500/20 rounded-lg text-white-500 placeholder-white-500/50 focus:border-salmon-500/50 focus:bg-white-500/10 focus:outline-none transition-all duration-300"
                  placeholder="tu@email.com"
                >
              </div>
            </div>

            <!-- Teléfono y Servicio -->
            <div class="grid sm:grid-cols-2 gap-6">
              <div class="group">
                <label class="geist-mono block text-sm text-white-500/80 mb-2 transition-colors group-focus-within:text-salmon-500">
                  Teléfono
                </label>
                <input 
                  type="tel"
                  class="w-full px-4 py-3 bg-white-500/5 border border-white-500/20 rounded-lg text-white-500 placeholder-white-500/50 focus:border-salmon-500/50 focus:bg-white-500/10 focus:outline-none transition-all duration-300"
                  placeholder="+1 (555) 123-4567"
                >
              </div>
              <div class="group">
                <label class="geist-mono block text-sm text-white-500/80 mb-2 transition-colors group-focus-within:text-salmon-500">
                  Servicio de interés
                </label>
                <select class="w-full px-4 py-3 bg-white-500/5 border border-white-500/20 rounded-lg text-white-500 focus:border-salmon-500/50 focus:bg-white-500/10 focus:outline-none transition-all duration-300 appearance-none cursor-pointer">
                  <option value="" class="bg-dark-500 text-white-500">Selecciona un servicio</option>
                  <option value="desarrollo-web" class="bg-dark-500 text-white-500">Desarrollo Web</option>
                  <option value="asesoria" class="bg-dark-500 text-white-500">Asesoría en Infraestructura</option>
                  <option value="automatizacion" class="bg-dark-500 text-white-500">Automatización de Procesos</option>
                  <option value="seguridad" class="bg-dark-500 text-white-500">Sistemas de Seguridad</option>
                  <option value="domotica" class="bg-dark-500 text-white-500">Domótica y Hogar Inteligente</option>
                  <option value="redes" class="bg-dark-500 text-white-500">Redes y Conectividad</option>
                </select>
              </div>
            </div>

            <!-- Mensaje -->
            <div class="group">
              <label class="geist-mono block text-sm text-white-500/80 mb-2 transition-colors group-focus-within:text-salmon-500">
                Mensaje
              </label>
              <textarea 
                rows="5"
                required
                class="w-full px-4 py-3 bg-white-500/5 border border-white-500/20 rounded-lg text-white-500 placeholder-white-500/50 focus:border-salmon-500/50 focus:bg-white-500/10 focus:outline-none transition-all duration-300 resize-none"
                placeholder="Cuéntanos sobre tu proyecto o consulta..."
              ></textarea>
            </div>

            <!-- Botón de envío -->
            <button 
              type="submit"
              class="group w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-salmon-500 to-salmon-600 hover:from-salmon-600 hover:to-salmon-700 text-white-500 font-medium rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-salmon-500/25"
            >
              <span class="geist-mono flex items-center justify-center gap-3">
                Enviar mensaje
                <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
              </span>
            </button>
          </form>
        </div>
      </div>

      <!-- Información de contacto -->
      <div class="order-1 lg:order-2 space-y-8">
        <!-- Información directa -->
        <div class="space-y-6">
          <!-- Teléfono -->
          <div class="group flex items-start gap-4 p-6 bg-gradient-to-br from-white-500/5 to-transparent border border-white-500/10 rounded-xl backdrop-blur-sm hover:border-blue-500/30 transition-all duration-300">
            <div class="flex-shrink-0 w-12 h-12 bg-blue-500/10 border border-blue-500/20 rounded-lg flex items-center justify-center group-hover:bg-blue-500/20 transition-colors duration-300">
              <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div>
              <h4 class="work-sans text-lg font-semibold text-white-500 mb-1">Teléfono</h4>
              <a href={`tel:${phone}`} class="geist-mono text-white-500/70 hover:text-salmon-500 transition-colors duration-300">
                {phone}
              </a>
            </div>
          </div>

          <!-- Email -->
          <div class="group flex items-start gap-4 p-6 bg-gradient-to-br from-white-500/5 to-transparent border border-white-500/10 rounded-xl backdrop-blur-sm hover:border-salmon-500/30 transition-all duration-300">
            <div class="flex-shrink-0 w-12 h-12 bg-salmon-500/10 border border-salmon-500/20 rounded-lg flex items-center justify-center group-hover:bg-salmon-500/20 transition-colors duration-300">
              <svg class="w-6 h-6 text-salmon-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h4 class="work-sans text-lg font-semibold text-white-500 mb-1">Email</h4>
              <a href={`mailto:${email}`} class="geist-mono text-white-500/70 hover:text-salmon-500 transition-colors duration-300">
                {email}
              </a>
            </div>
          </div>

          <!-- Ubicación -->
          <div class="group flex items-start gap-4 p-6 bg-gradient-to-br from-white-500/5 to-transparent border border-white-500/10 rounded-xl backdrop-blur-sm hover:border-green-500/30 transition-all duration-300">
            <div class="flex-shrink-0 w-12 h-12 bg-green-500/10 border border-green-500/20 rounded-lg flex items-center justify-center group-hover:bg-green-500/20 transition-colors duration-300">
              <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="work-sans text-lg font-semibold text-white-500 mb-1">Ubicación</h4>
              <p class="geist-mono text-white-500/70">
                {address}
              </p>
            </div>
          </div>
        </div>

        <!-- WhatsApp destacado -->
        <div class="relative p-6 bg-gradient-to-br from-green-500/10 to-green-600/5 border border-green-500/20 rounded-xl backdrop-blur-sm">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-green-500/20 border border-green-500/30 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
            </div>
            <div>
              <h4 class="work-sans text-lg font-semibold text-white-500 mb-1">WhatsApp</h4>
              <p class="geist-mono text-sm text-white-500/70">Respuesta inmediata</p>
            </div>
          </div>
          <a 
            href={`https://wa.me/${whatsapp}?text=Hola, me interesa conocer más sobre sus servicios tecnológicos`}
            target="_blank"
            rel="noopener noreferrer"
            class="group inline-flex items-center gap-3 px-6 py-3 bg-green-500 hover:bg-green-600 text-white-500 font-medium rounded-lg transition-all duration-300 transform hover:scale-105"
          >
            <span class="geist-mono">Chatear ahora</span>
            <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Redes sociales -->
        <div class="space-y-4">
          <h4 class="work-sans text-lg font-semibold text-white-500">Síguenos en redes</h4>
          <div class="flex gap-4">
            {socialLinks.facebook && (
              <a 
                href={socialLinks.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="group w-12 h-12 bg-white-500/5 border border-white-500/20 rounded-lg flex items-center justify-center hover:border-blue-500/50 hover:bg-blue-500/10 transition-all duration-300"
              >
                <svg class="w-5 h-5 text-white-500/70 group-hover:text-blue-500 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            )}
            {socialLinks.instagram && (
              <a 
                href={socialLinks.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="group w-12 h-12 bg-white-500/5 border border-white-500/20 rounded-lg flex items-center justify-center hover:border-pink-500/50 hover:bg-pink-500/10 transition-all duration-300"
              >
                <svg class="w-5 h-5 text-white-500/70 group-hover:text-pink-500 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323C5.902 8.198 7.053 7.708 8.35 7.708s2.448.49 3.323 1.297c.897.875 1.387 2.026 1.387 3.323s-.49 2.448-1.297 3.323c-.875.897-2.026 1.387-3.323 1.387zm7.718 0c-1.297 0-2.448-.49-3.323-1.297-.897-.875-1.387-2.026-1.387-3.323s.49-2.448 1.297-3.323c.875-.897 2.026-1.387 3.323-1.387s2.448.49 3.323 1.297c.897.875 1.387 2.026 1.387 3.323s-.49 2.448-1.297 3.323c-.875.897-2.026 1.387-3.323 1.387z"/>
                </svg>
              </a>
            )}
            {socialLinks.linkedin && (
              <a 
                href={socialLinks.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="group w-12 h-12 bg-white-500/5 border border-white-500/20 rounded-lg flex items-center justify-center hover:border-blue-600/50 hover:bg-blue-600/10 transition-all duration-300"
              >
                <svg class="w-5 h-5 text-white-500/70 group-hover:text-blue-600 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
            {socialLinks.twitter && (
              <a 
                href={socialLinks.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="group w-12 h-12 bg-white-500/5 border border-white-500/20 rounded-lg flex items-center justify-center hover:border-sky-500/50 hover:bg-sky-500/10 transition-all duration-300"
              >
                <svg class="w-5 h-5 text-white-500/70 group-hover:text-sky-500 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>